<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pizzaloop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/icon_loop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.example.pizzaloop.Login.LoginUser"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.pizzaloop.Edit_Order.ReviewOrder" />
        <activity android:name="com.example.pizzaloop.Edit_Order.EditOrder" />
        <activity
            android:name="com.example.pizzaloop.Edit_Order.OrderCRUD"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.pizzaloop.Edit_Order.ReviewPayment" />
        <activity
            android:name="com.example.pizzaloop.Order.Payment"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pizzaloop.WelcomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pizzaloop.Login.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pizzaloop.Order.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pizzaloop.Order.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.example.pizzaloop.Edit_Order.ReviewDetails" />
        <activity android:name="com.example.pizzaloop.Edit_Order.ReviewMain" />
        <activity
            android:name="com.example.pizzaloop.Login.SplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.example.pizzaloop.com.squareup.picasso"
            android:exported="false" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.pizzaloop.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>